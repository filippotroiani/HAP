<% layout('layouts/comunicazioni-index-layout') -%>	
        <div class="area">
            <div id="area_dati">
                <center><img src="/images/avatar.png" id="immagine-profilo"></center><br><br>
                <div id="nome-utente">Nome: <label id="nome-utente"><%= currentUser.idRef.nome %></label></div><br><br>
                <div id="cognome-utente">Cognome: <label id="cognome-utente"><%= currentUser.idRef.cognome %></label></div><br><br>
                <% if(typeof currentUser.idRef.dataNascita!='undefined'){ %>
                <div id="data-nascita">Data di nascita: <label id="data-nascita-utente">
                    <% const dataNascita = currentUser.idRef.dataNascita.toISOString().substring(0,10).split('-');
                     %><%= `${dataNascita[2]}-${dataNascita[1]}-${dataNascita[0]}` %></label></div><br><br><% } %>
                <div id="utente-cf">CF: <label id="cf-utente"><%= currentUser.idRef.CF %></label></div><br><br>
                <div id="e-mail-utente">E-mail: <label id="e-mail-utente"><%= currentUser.email %></label></div><br><br>
                <div id="e-mail-utente">Telefono: <label id="e-mail-utente"><%= currentUser.idRef.numTelefono %></label></div><br><br>
