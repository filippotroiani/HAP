<% layout('layouts/comunicazioni-index-layout') -%>
<h1>Nuova Comunicazione</h1>
<form id="aggiungiNews" action="/comunicazioni" method="POST">
  <div class="error-message"></div>
  <div><input name="comunicazione[titolo]" placeholder="Titolo" id="titolo"/></div>
  <div>
    <textarea name="comunicazione[testo]" placeholder="Testo" id="text"></textarea>
  </div>
  <div>
    <input name="comunicazione[paroleChiave]" placeholder="Parole chiave" id="key"/>
    Inserisci parole chiave separate da una virgola
  </div>
  <input type="submit" value="Pubblica" id="conferma"/>
</form>
