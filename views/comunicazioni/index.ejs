<% layout('layouts/comunicazioni-index-layout') -%>
<header>
	<h1 class="title">HAP - News</h1>
	<form id="cercaNewsForm">
		<div class="error-message"></div>
		<input
			type="text"
			id="cercaInput"
			placeholder="Cerca notizia"
			name="cerca"
			value="<%=(!parolaChiave)?'':parolaChiave%>"
		/>
		<button type="submit" id="cercaButton">Cerca</button>
	</form>
</header>
<main>
	<div class="newsContainer"></div>
	<div class="button-container">
		<p id="loadMore">Loading...</p>
	</div>
</main>
